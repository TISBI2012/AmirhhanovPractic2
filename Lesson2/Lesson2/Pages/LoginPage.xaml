<Page x:Class="Lesson2.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">

    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Добро пожаловать" FontSize="24" Margin="10" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="UsernameTextBox" Height="40" Margin="10" />
            <PasswordBox x:Name="PasswordBox" Height="40" Margin="10" />
            <Button Content="Войти" Height="40" Margin="10" Click="LoginButton_Click" Background="#2196F3" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
